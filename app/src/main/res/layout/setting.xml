<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/namespace"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:hint="Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/checkableImageButton_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="106dp"
            android:src="@mipmap/setiot_win"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/sensertext"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/portselect" />

        <android.support.design.widget.CheckableImageButton
            android:id="@+id/checkableImageButton_blub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="30dp"
            android:src="@mipmap/setiot_bulb"
            app:layout_constraintHorizontal_bias="0.156"
            app:layout_constraintLeft_toRightOf="@+id/checkableImageButton_win"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/sensertext" />

        <TextView
            android:id="@+id/sensertext"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="#c40000fc"
            android:gravity="center_horizontal|center"
            android:layout_below="@+id/namespace"
            android:text="Select Sonsoer"
            android:textColor="#ffffff"
            android:textSize="24.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/namespace"
            android:layout_marginTop="16dp" />



        <TextView
            android:id="@+id/portselect"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="#c40000fc"
            android:gravity="center_horizontal|center"
            android:layout_below="@+id/checkableImageButton_blub"
            android:text="Select Port"
            android:textColor="#ffffff"
            android:textSize="24.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/checkableImageButton_blub" />

        <CheckBox
            android:id="@+id/port01"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="port01"
            android:textSize="20dp"
            android:gravity="clip_horizontal"
            android:layout_below="@+id/portselect"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toBottomOf="@+id/portselect" />

        <CheckBox
            android:id="@+id/port02"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port01"
            android:text="port02"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/port01" />

        <CheckBox
            android:id="@+id/port03"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port01"
            android:text="port03"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/port02" />

        <CheckBox
            android:id="@+id/port04"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/port01"
            android:text="port04"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/port03" />

        <Button
            android:id="@+id/okbtn"
            android:layout_width="185dp"
            android:layout_height="82dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="43dp"
            android:text="Button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/port04"
            tools:layout_editor_absoluteX="51dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>